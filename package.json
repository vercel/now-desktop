{
  "name": "now-desktop",
  "productName": "Now",
  "description": "Create deployments right from the tray menu",
  "version": "4.0.0-canary.18",
  "author": {
    "name": "Zeit, Inc.",
    "email": "team@zeit.co"
  },
  "repository": "zeit/now-desktop",
  "main": "main/index.js",
  "scripts": {
    "start": "electron main",
    "build": "next build renderer && next export renderer",
    "precommit": "lint-staged",
    "test": "xo",
    "pack": "npm run build && build --dir",
    "dist": "npm run build && build"
  },
  "build": {
    "appId": "co.zeit.now",
    "files": [
      "**/*",
      "!renderer",
      "renderer/out"
    ],
    "win": {
      "target": [
        "squirrel"
      ],
      "icon": "main/static/icons/windows.ico"
    },
    "squirrelWindows": {
      "loadingGif": "main/static/install-spinner.gif"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "main/static/icons/mac.icns",
      "extendInfo": {
        "LSUIElement": 1
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run test",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "xo": {
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "env": [
      "browser",
      "node"
    ],
    "rules": {
      "linebreak-style": 0,
      "no-await-in-loop": 0,
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0,
      "unicorn/error-message": 0,
      "complexity": 0
    }
  },
  "license": "MIT",
  "dependencies": {
    "app-root-path": "2.0.1",
    "arr-flatten": "1.1.0",
    "async-retry": "1.1.4",
    "bytes": "3.0.0",
    "chalk": "2.3.1",
    "child-process-promise": "2.2.1",
    "chokidar": "2.0.2",
    "date-fns": "1.29.0",
    "deep-extend": "0.5.0",
    "deployment-type": "1.0.3",
    "docker-file-parser": "1.0.3",
    "dot-prop": "4.2.0",
    "electron-is-dev": "0.3.0",
    "electron-next": "3.1.3",
    "electron-squirrel-startup": "1.0.0",
    "first-run": "1.2.0",
    "fix-path": "2.1.0",
    "fs-extra": "5.0.0",
    "glob": "7.1.2",
    "global-packages": "1.0.2",
    "groom": "1.1.1",
    "ignore": "3.3.7",
    "ini": "1.3.5",
    "just-compare": "1.2.1",
    "load-licenses": "1.0.1",
    "make-unique": "1.0.4",
    "mkdirp": "0.5.1",
    "ms": "2.1.1",
    "node-fetch": "2.0.0",
    "path-exists": "3.0.0",
    "promisepipe": "2.1.1",
    "react-input-autosize": "2.2.1",
    "react-slick": "0.18.1",
    "resumer": "0.0.0",
    "semver": "5.5.0",
    "serialize-error": "2.1.0",
    "sleep-promise": "2.0.0",
    "split-array": "1.0.1",
    "sudo-prompt": "8.1.0",
    "time-ago": "0.2.1",
    "tmp-promise": "1.0.4",
    "trim": "0.0.1",
    "ua-parser-js": "0.7.17",
    "winreg": "1.2.4"
  },
  "devDependencies": {
    "electron": "1.8.2",
    "electron-builder": "20.0.4",
    "electron-builder-squirrel-windows": "20.0.4",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-react": "7.6.1",
    "html-to-react": "1.3.3",
    "husky": "0.14.3",
    "jquery": "3.3.1",
    "lint-staged": "6.1.0",
    "next": "5.0.0",
    "prettier": "1.10.2",
    "prop-types": "15.6.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-refs": "3.0.4",
    "react-sortable-hoc": "0.6.8",
    "strip": "3.0.0",
    "xo": "0.20.2"
  }
}
