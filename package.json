{
  "name": "now-desktop",
  "productName": "Now",
  "description": "Create deployments right from the tray menu",
  "version": "5.0.0-canary.7",
  "author": {
    "name": "ZEIT, Inc.",
    "email": "team@zeit.co"
  },
  "repository": "zeit/now-desktop",
  "main": "main/index.js",
  "scripts": {
    "start": "electron main",
    "build": "yarn build-renderer && yarn build-app",
    "build-app": "build",
    "build-renderer": "cross-env NODE_ENV=production next build renderer && next export renderer",
    "precommit": "lint-staged",
    "test": "yarn test-lint",
    "test-lint": "xo"
  },
  "sentryDsn": "https://d07ceda63dd8414e9c403388cfbd18fe@sentry.io/1323140",
  "build": {
    "appId": "co.zeit.now",
    "files": [
      "**/*",
      "!renderer",
      "renderer/out"
    ],
    "win": {
      "target": [
        "squirrel"
      ],
      "icon": "main/static/icons/windows.ico"
    },
    "squirrelWindows": {
      "loadingGif": "main/static/install-spinner.gif"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "main/static/icons/mac.icns",
      "extendInfo": {
        "LSUIElement": 1
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn test-lint",
      "prettier --single-quote --write --no-editorconfig",
      "git add"
    ]
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "env": [
      "browser",
      "node"
    ],
    "rules": {
      "no-await-in-loop": 0,
      "react/react-in-jsx-scope": 0,
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0,
      "complexity": 0,
      "max-params": 0,
      "lines-between-class-members": 0,
      "semi": [
        2,
        "always"
      ]
    },
    "ignores": [
      "dist",
      "renderer/.next",
      "renderer/out"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@sentry/electron": "0.13.0",
    "app-root-path": "2.0.1",
    "async-retry": "1.2.1",
    "babel-eslint": "8.2.2",
    "bytes": "3.0.0",
    "child-process-promise": "2.2.1",
    "date-fns": "1.29.0",
    "deep-extend": "0.6.0",
    "dot-prop": "4.2.0",
    "electron-is-dev": "0.3.0",
    "electron-next": "3.1.5",
    "electron-positioner": "4.1.0",
    "electron-squirrel-startup": "1.0.0",
    "electron-store": "2.0.0",
    "fix-path": "2.1.0",
    "fs-extra": "5.0.0",
    "global-packages": "1.0.2",
    "groom": "1.1.1",
    "idb-keyval": "3.2.0",
    "make-unique": "1.0.4",
    "mkdirp": "0.5.1",
    "ms": "2.1.1",
    "node-fetch": "2.1.2",
    "now-client": "3.2.3",
    "path-exists": "3.0.0",
    "promisepipe": "2.1.2",
    "react-fast-compare": "1.0.0",
    "semver": "5.5.0",
    "sudo-prompt": "8.2.0",
    "time-ago": "0.2.1",
    "tmp-promise": "1.0.4",
    "trim": "0.0.1",
    "winreg": "1.2.4"
  },
  "devDependencies": {
    "babel-plugin-transform-define": "1.3.0",
    "classnames": "2.2.6",
    "cross-env": "5.2.0",
    "electron": "3.0.4",
    "electron-builder": "20.28.4",
    "electron-builder-squirrel-windows": "20.28.3",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-react": "7.7.0",
    "husky": "0.14.3",
    "lint-staged": "7.1.1",
    "next": "8.0.5-canary.34",
    "prettier": "1.11.1",
    "promise-timeout": "1.3.0",
    "prop-types": "15.6.1",
    "query-string": "6.4.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-sortable-hoc": "0.6.8",
    "xo": "0.20.3"
  }
}
