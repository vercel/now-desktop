{
  "name": "now-desktop",
  "productName": "Now",
  "description": "Realtime global deployments",
  "version": "2.0.1",
  "author": {
    "name": "Zeit, Inc.",
    "email": "team@zeit.co"
  },
  "repository": "zeit/now-desktop",
  "main": "main/index.js",
  "scripts": {
    "start": "electron main",
    "build": "next build renderer && next export renderer",
    "precommit": "lint-staged",
    "test": "xo",
    "pack": "npm run build && build --dir",
    "dist": "npm run build && build"
  },
  "build": {
    "appId": "co.zeit.now",
    "asar": false,
    "win": {
      "target": [
        "squirrel"
      ],
      "icon": "main/static/icons/windows.ico"
    },
    "squirrelWindows": {
      "loadingGif": "main/static/install-spinner.gif"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "main/static/icons/mac.icns",
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "files": [
      "main",
      "node_modules"
    ],
    "extraResources": [
      {
        "from": "renderer/out",
        "to": "app/renderer"
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run test",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "xo": {
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "env": [
      "browser",
      "node"
    ],
    "rules": {
      "new-cap": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-unresolved": 0,
      "no-await-in-loop": 0,
      "linebreak-style": 0
    }
  },
  "greenkeeper": {
    "ignore": [
      "prettier"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "app-root-path": "2.0.1",
    "arr-flatten": "1.1.0",
    "async-retry": "1.1.3",
    "bytes": "2.5.0",
    "chalk": "2.0.1",
    "child-process-promise": "2.2.1",
    "chokidar": "1.7.0",
    "deep-extend": "0.5.0",
    "deployment-type": "1.0.1",
    "docker-file-parser": "1.0.2",
    "dot-prop": "4.1.1",
    "electron-debug": "1.2.0",
    "electron-is-dev": "0.2.0",
    "electron-lets-move": "0.0.5",
    "electron-next": "3.0.7",
    "electron-squirrel-startup": "1.0.0",
    "first-run": "1.2.0",
    "fix-path": "2.1.0",
    "fs-extra": "3.0.1",
    "glob": "7.1.2",
    "global-packages": "1.0.2",
    "groom": "1.1.1",
    "ignore": "3.3.3",
    "ini": "1.3.4",
    "just-compare": "1.1.21",
    "load-licenses": "1.0.1",
    "make-unique": "1.0.4",
    "mkdirp": "0.5.1",
    "moment": "2.18.1",
    "ms": "2.0.0",
    "node-fetch": "1.7.1",
    "path-exists": "3.0.0",
    "promisepipe": "2.0.0",
    "react-input-autosize": "1.1.4",
    "react-slick": "0.14.11",
    "resumer": "0.0.0",
    "semver": "5.3.0",
    "serialize-error": "2.1.0",
    "sleep-promise": "2.0.0",
    "split-array": "1.0.1",
    "sudo-prompt": "7.1.0",
    "time-ago": "0.1.0",
    "tmp-promise": "1.0.3",
    "trim": "0.0.1",
    "ua-parser-js": "0.7.13",
    "which-promise": "1.0.0",
    "winreg": "1.2.4"
  },
  "devDependencies": {
    "devtron": "1.4.0",
    "electron": "1.7.1",
    "electron-builder": "19.13.0",
    "electron-builder-squirrel-windows": "19.12.0",
    "eslint-config-prettier": "2.3.0",
    "eslint-plugin-react": "7.1.0",
    "html-to-react": "1.2.11",
    "husky": "0.14.3",
    "lint-staged": "4.0.1",
    "next": "3.0.1-beta.8",
    "prettier": "1.5.2",
    "prop-types": "15.5.10",
    "react": "15.6.1",
    "react-dom": "15.6.1",
    "react-refs": "3.0.4",
    "react-sortable-hoc": "0.6.5",
    "strip": "3.0.0",
    "xo": "0.18.2"
  }
}
